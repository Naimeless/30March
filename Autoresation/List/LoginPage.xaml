<Page x:Class="Autoresation.List.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Autoresation.List"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="Page1">

    <Grid>
        <TextBox x:Name="LoginInput" Margin="2,139,2,0" TextWrapping="Wrap" Text="Логин" Height="28" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" FontSize="16"/>
        <TextBox x:Name="PasswordInput" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" Height="26" Margin="2,225,2,0" FontSize="16"/>
        <Button Content="Авторизация" Margin="2,301,2,0" Click="Button_Click" Height="32" VerticalAlignment="Top" FontSize="18"/>

    </Grid>
</Page>
